<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
        <session-factory>
                <property name="connection.url">jdbc:mysql://localhost:3306/bma</property>
                <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
                <!-- username-->
                <property name="connection.username">root</property>
                <property name="connection.password">Zhang123456</property>
                <!--password-->
                <property name="hbm2ddl.auto">update</property>
                <property name="show_sql">true</property>
                <mapping resource="hibernate/Production.hbm.xml"/>
                <mapping resource="hibernate/Seller.hbm.xml"/>
                <mapping resource="hibernate/Order.hbm.xml"/>
                <mapping resource="hibernate/Preuser.hbm.xml"/>
                <mapping resource="hibernate/Category.hbm.xml"/>
                <mapping resource="hibernate/CategorySecond.hbm.xml"/>
                <mapping resource="hibernate/OrderItem.hbm.xml"/>
                <mapping resource="hibernate/AdminUser.hbm.xml"/>
                <mapping resource="hibernate/plant.hbm.xml"/>
                <mapping resource="hibernate/farm.hbm.xml"/>
                <mapping resource="hibernate/Result.hbm.xml"/>
        </session-factory>
</hibernate-configuration>
